headers = 40px
fsize = 2.2

.header
  display inline-block
  position fixed
  width 100vw
  height headers
  background #f3f3f3
  font-size unit(fsize,em)
.im
  display inline-block
  transform rotate(-90deg) scale(5) translate(-20px,-8px)
  line-height headers
  text-decoration none
.sm
  font-weight lighter
  font-size unit(fsize/4,em)
  margin 10px
  line-height headers
  text-decoration none
  &:after
    font-weight bolder
    font-size unit(fsize,em)
    content ' / '
.menu
  float right
.logo
  float left
  font-weight normal
  margin-left 20px
  letter-spacing unit(fsize/10,em)
  line-height headers
  b
    font-weight 800
a
  line-height headers
  text-decoration none
input
  font-size unit(fsize/2.5,em)
  font-family Gill Sans
  font-weight lighter
  border 2px solid #eee
  line-height 16px
  border-radius 16px
  padding-left 10px
  margin 2px
  margin-right 20px
  outline none
