body
  margin 0
  font-family Gill Sans
#back
  position absolute
  top 0
  width 100vw
  height 100vh
  z-index -1
.slice
  width 80%
  max-width 800px
  margin auto
  height 100vh
  .bottom
    height 100px
  .top
    text-align center
    background rgb(251,231,231)
    margin auto
    padding 20px 0 20px 0
    transition all .5s linear
    .feedback
      a
        text-decoration none
        margin-left 8px
        margin-right 8px
        background white
        border-radius 12px
        font-size 12px
        padding 5px
      span
        color grey
        font-size 12px
    p
      width 80%
      text-align left
      margin auto
      background linear-gradient(to top, rgba(0,0,0,0.05), black)
      -webkit-background-clip text
      -webkit-text-fill-color transparent
      a
        background rgba(0,0,255,.5)
        -webkit-background-clip text
        -webkit-text-fill-color transparent
    .cp
      float left
    .cl
      float right
    .smart
      display inline-block
      width 40%
    h1
    h3
      margin-top 0
      font-weight 100
      span
        font-weight 800
  .body
    width 100%
    background white
    .sides
      width 100%
      display inline-block
    h1
      text-align center
      img
        border-radius 50%
        position relative
        top 10px
        width 40px
      span
        font-weight 800
        font-size 1.2em
        color gray
    .ts
      text-align center
      position relative
      top -20px
      font-size 1.2em
      color black
      opacity .8
      font-weight 800
    .lf
      transform rotate(-12deg)
      color blue
    .lr
      transform rotate(12deg)
      color red
    .chat
      height 60%
      .mesblock
        height 100%
        overflow scroll
        .mes
          small
            //float right
            color grey
            font-size .75em
            font-weight 100
            margin 0
            margin-left 10px
            line-height 0
            padding 0
          min-height 40px
          padding 2px
          background white
          width 60%
          margin-top 5px
          margin-left 10px
          border-radius 5px 20px 20px 20px
          p
            margin 4px
            margin-left 10px
    .calc
      .content
        span
          color green
          font-size 1.2em
          font-weight 100
        input
          border 1px solid #eee
          font-family Gill Sans
          font-size 1.2em
          margin-left 10px
          border-radius 1.2em
          padding-left 10px
          outline none
          width 60%
    .users
      margin-left 10px
      .content
        width 100%
        height 60px
        display flex
        overflow-x scroll
        .us
          overflow hidden
          span
            position relative
            margin 0
            color grey
            top -20px
            font-size 12px
            background white
            border-radius 12px
            padding-left 5px
            padding-right 5px
          img
            border-radius 50%
            width 40px
            height 40px
          width 40px
          flex-shrink 0
          margin-top 5px
          margin-left -20px
          &:first-child
            margin-left 0px
    .side1
      text-align left
      margin 0
      float left
      width 50%
      height 400px
      background lighten(red,90%)
      .nam
        position relative
        left -20px
        color grey
    .side2
      text-align right
      margin 0
      float right
      width 50%
      height 400px
      background lighten(blue,90%)
      .nam
        position relative
        left 20px
        color grey
